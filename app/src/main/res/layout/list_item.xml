<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:gravity="center_vertical"
    android:minHeight="@dimen/list_item_height"
    android:orientation="horizontal"
    android:padding="0dp">

    <ImageView
        android:id="@+id/list_item_icon"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:src="@mipmap/ic_launcher" />

    <RelativeLayout
        android:id="@+id/content_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/list_item_icon"
        android:orientation="vertical"
        android:paddingLeft="16dp"
       >

        <TextView
            android:id="@+id/miwok_translation"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:textColor="#fff"
            android:textSize="16dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/default_translation"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textColor="#fff"
            android:textSize="16dp"
            android:layout_height="44dp"
            android:layout_below="@id/miwok_translation"/>


    </RelativeLayout>
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:src="@drawable/baseline_play_arrow_white_24dp" />

</RelativeLayout>